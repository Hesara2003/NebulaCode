# Backend Environment Configuration
# Copy this file to .env and configure values

# Server Configuration
PORT=4000
NODE_ENV=development

# Collaboration Gateway Settings
COLLAB_NAMESPACE=editor-sync
COLLAB_SOCKET_PATH=/editor-sync/socket.io
COLLAB_PERSIST_DEBOUNCE_MS=750
COLLAB_METRICS_ENABLED=true

# Allowed Origins (comma-separated)
# Add your frontend URLs here
COLLAB_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Database Configuration (if using)
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=nebula
# DATABASE_USER=nebula
# DATABASE_PASSWORD=password

# Redis Configuration (optional, for scaling)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Storage Configuration
# STORAGE_PATH=./workspaces-data

# Auth Configuration (if implemented)
# JWT_SECRET=your-secret-key
# JWT_EXPIRES_IN=7d
